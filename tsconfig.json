{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "baseUrl": "./src",
    "paths": {
      "@types": [
        "./types"
      ] // Optional, if you're organizing your types in a specific directory
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}